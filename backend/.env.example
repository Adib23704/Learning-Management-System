# Server
NODE_ENV=development
PORT=8000
CORS_ORIGINS=http://localhost:3000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/lms_db

# JWT
JWT_ACCESS_SECRET=change-this-to-a-secure-random-string-min-32
JWT_REFRESH_SECRET=change-this-to-another-secure-random-string-min-32

# Cloudinary
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Email (Ethereal for dev)
SMTP_HOST=smtp.ethereal.email
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM="LMS <noreply@lms.dev>"

# Only required when the frontend and backend are on different subdomains (e.g. Vercel + Render).
# Set to the shared parent domain with a leading dot so the refresh_token cookie is visible to both the API subdomain and the frontend subdomain.
# Leave unset for local development (cookie is scoped to localhost automatically).
# Example: COOKIE_DOMAIN=.adibdev.me
COOKIE_DOMAIN=
